[Unit]
Description=Keycloak Identity Provider (Docker Compose)
Requires=docker.service
After=docker.service network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
# Ansible eventually will put this file in /opt/homelab-repo/docker/keycloak/
WorkingDirectory={{ project_root }}/docker/keycloak
ExecStart=/usr/bin/docker compose up -d --remove-orphans
ExecStop=/usr/bin/docker compose down
ExecReload=/usr/bin/docker compose pull && /usr/bin/docker compose up -d

[Install]
WantedBy=multi-user.target
